@model HalloDocDAL.Model.ScheduleModel

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr class="bg-secondary-subtle">
                <th scope="col" class="bg-transparent"> <input type="checkbox" id="selectAll" /> </th>
                <th scope="col" class="bg-transparent"> <p>Staff <span><i id="sort" class="bi bi-arrow-down"></i></span> </p> </th>
                <th scope="col" class="bg-transparent"> <p>Day</p> </th>
                <th scope="col" class="bg-transparent"> <p>Time</p> </th>
                <th scope="col" class="bg-transparent"> <p>Region</p> </th>
            </tr>
        </thead>

        <tbody id="tableBody">
            @foreach (var item in Model.DayList)
            {
                if (item.Status == 0)
                {
                    <tr>
                        <td class="bg-transparent"> <input type="checkbox" class="checkbox" name="selectedShifts" value="@item.ShiftDetailId" /> </td>
                        <td class="bg-transparent"> <p>@item.PhysicianName</p> </td>
                        <td class="bg-transparent"> <p>@item.Shiftdate</p> </td>
                        <td class="bg-transparent"> <p>@item.Starttime - @item.Endtime;</p> </td>
                        <td class="bg-transparent"> <p>@item.RegionName</p> </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>