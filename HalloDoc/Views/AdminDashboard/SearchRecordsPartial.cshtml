@model PagedList<HalloDocDAL.Model.SearchRecord>
@{
    var list = Model.ToList();
    int nextPage = 0, previousPage = 0;
    if (Model.hasNext)
    {
        nextPage = Model.CurrentPage + 1;
    }
    if (Model.hasPrevious)
    {
        previousPage = Model.CurrentPage - 1;
    }
    int first = Model.CurrentPage * Model.PageSize - 9;
    if (Model.TotalCount == 0)
    {
        first = 0;
    }
    int last;
    if (first + Model.PageSize - 1 > Model.TotalCount)
    {
        last = Model.TotalCount;
    }
    else
    {
        last = first + Model.PageSize - 1;
    }
}
<table class="table my-3 me-0">
    <thead class="">
        <tr class="bg-secondary-subtle">
            <th class="py-3 fs-6">Patient Name</th>
            <th class="py-3 fs-6">Requestor</th>
            <th class="py-3 fs-6">Date Of Service</th>
            <th class="py-3 fs-6">Close Case Date</th>
            <th class="py-3 fs-6">Email</th>
            <th class="py-3 fs-6">Phone Number</th>
            <th class="py-3 fs-6">Address</th>
            <th class="py-3 fs-6">Zip</th>
            <th class="py-3 fs-6">Request Status</th>
            <th class="py-3 fs-6">Physician</th>
            <th class="py-3 fs-6">Physician Note</th>
            <th class="py-3 fs-6">Cancelled By Provider Note</th>
            <th class="py-3 fs-6">Admin Note</th>
            <th class="py-3 fs-6">Patient Note</th>
            <th class="py-3 fs-6">Delete Permanently</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr class="data-row searchrecords_data_row">
                <td class="py-3 fs-6">@item.PatientName</td>
                <td class="py-3 fs-6">@item.Requestor</td>
                <td class="py-3 fs-6">@item.ServiceDate</td>
                <td class="py-3 fs-6">@item.DateofClose</td>
                <td class="py-3 fs-6">@item.Email</td>
                <td class="py-3 fs-6">@item.PhoneNumber</td>
                <td class="py-3 fs-6">@item.Address</td>
                <td class="py-3 fs-6">@item.Zip</td>
                <td class="py-3 fs-6">@item.StatusName</td>
                <td class="py-3 fs-6">@item.PhysicianName</td>
                <td class="py-3 fs-6">@item.PhysicianNote</td>
                <td class="py-3 fs-6">@item.CancelledByProvidor</td>
                <td class="py-3 fs-6">@item.AdminNotes</td>
                <td class="py-3 fs-6">@item.PatientNote</td>
                <td class="py-3 fs-6 text-center">
                    <button role="button" onclick="deleterequest(@item.RequestId)" class="btn btn-outline-info deleterequest">Delete</button>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="d-flex justify-content-center">
    <p>
        @first - @last of @Model.TotalCount
    </p>
</div>
<div class="pb-5">
    <ul class="pagination justify-content-center mt-2 mb-4 ">
        <li class="page-item mx-1 ">
            <a class="page-link border-secondary-subtle rounded theme-color theme-background" onclick="changepage(@previousPage)">&laquo;</a>
        </li>
        @if (Model.hasPrevious)
        {
            <li class="page-item mx-1"><a class="page-link border-secondary-subtle rounded theme-color theme-background" onclick="changepage(@previousPage)"> @previousPage </a></li>
        }

        <li class="page-item active mx-1">
            <span class="page-link  bg-info border-info rounded">
                @Model.CurrentPage
                <span class="sr-only">(current)</span>
            </span>
        </li>

        @if (Model.hasNext)
        {
            <li class="page-item mx-1"><a class="page-link theme-color theme-background border-secondary-subtle rounded" onclick="changepage(@nextPage)"> @nextPage </a></li>
        }

        <li class="page-item mx-1">
            <a class="page-link border-secondary-subtle rounded theme-color theme-background" onclick="changepage(@nextPage)">&raquo;</a>
        </li>
    </ul>
</div>
