@model HalloDocDAL.Model.AdminDashboard
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@{
    Layout = "_adminDash";
    int newCase = 0;
    int pendingCase = 0;
    int activeCase = 0;
    int concludeCase = 0;
    int toCloseCase = 0;
    int unpaidCase = 0;

    ;

    foreach (var req in Model.Data)
    {
        if (req.status == 1)
        {
            newCase++;
        }
        else if (req.status == 2)
        {
            pendingCase++;
        }
        else if (req.status == 4 || req.status == 5)
        {
            activeCase++;
        }
        else if (req.status == 6)
        {
            concludeCase++;
        }
        else if (req.status == 3 || req.status == 7 || req.status == 8)
        {
            toCloseCase++;
        }
        else if (req.status == 9)
        {
            unpaidCase++;
        }
    }
}
<div id="divdiv">
    <div class="row">
        <div class="col-12">
            <ul class="nav m-2 g-2 " id="dashboard_tab" role="tablist">
